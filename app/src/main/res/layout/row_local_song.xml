<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/mautrongsuot">

    <ImageView
        android:id="@+id/imgnhaclocal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txttennhaclocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/arimo_bold"
        android:maxWidth="300dp"
        android:text="Tên Bài Hát"
        android:textColor="#FBFBFB"
        android:textSize="20dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/imgnhaclocal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtcasinhaclocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/arimo_bold"
        android:maxWidth="250dp"
        android:text="Ca siz"
        android:textColor="#C3C3C3"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgnhaclocal"
        app:layout_constraintTop_toBottomOf="@+id/txttennhaclocal" />

</androidx.constraintlayout.widget.ConstraintLayout>